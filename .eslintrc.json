{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "eslint:recommended",
    "prettier"
  ],
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": "error",
    "max-len": ["error", {"code": 100}],
    "indent": ["error", 2]
  },
  "plugins": [
    "prettier"
  ]
}
